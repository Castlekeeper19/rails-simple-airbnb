<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header pt-3 px-3 border-bottom bg-light d-flex justify-content-between align-items-center">
      <h3>Simple AirBnB</h3>
      <%= link_to "Add Flat", new_flat_path, class:"btn btn-primary mb-2"  %>
    </div>

    <%= yield %>
  </body>
</html>
