  <div class="container">
    <div class="row">
      <div class=" col-8">
        <div class="bg-light rounded p-2 border my-2">
          <h1> <%= @flat.name %></h1>
          <p><%= @flat.address %></p>
        </div >
        <div class="bg-light rounded p-2 border my-2">
          <h4>A bit about this flat</h4>
          <p><%= @flat.description %></p>
        </div>
        <div class="bg-light rounded p-2 border my-2">
        <img id="map" src="https://raw.githubusercontent.com/lewagon/layouts-demo/gh-pages/images/mapbox.png">
