           <span class="input-group-text" id="basic-addon1">From</span>
            <input type="date" class="form-control" placeholder="12/10/21" aria-label="Date" aria-describedby="basic-addon1">
             <span class="input-group-text" id="basic-addon1">Until</span>
            <input type="date" class="form-control" placeholder="12/17/21" aria-label="Date" aria-describedby="basic-addon1">
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
          </div>
        </div>
        <div class="bg-light rounded p-2 border my-2">
          <h2>Details</h2>
          <p>$<%= @flat.price_per_night%>.00 per night</p>
        </div>
        <div class="bg-light rounded p-2 border my-2 d-flex justify-content-between">
          <p>share</p>
          <div class="ts-3">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-snapchat"></i>
          </div>
        </div>
      </div>
    </div>
